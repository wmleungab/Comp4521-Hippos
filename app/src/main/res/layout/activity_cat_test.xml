<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hkust.comp4521.hippos.CategoryTestActivity">

    <TextView
        android:id="@+id/setting_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="TesterButton" />

    <Button
        android:id="@+id/setting_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="New Button" />

    <Button
        android:id="@+id/get_all_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_btn2"
        android:layout_centerHorizontal="true"
        android:text="get all Category" />

    <Button
        android:id="@+id/getACat_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_all_cat"
        android:layout_centerHorizontal="true"
        android:text="getACategory" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/getACat_btn"
        android:layout_toLeftOf="@+id/get_all_cat"
        android:layout_toStartOf="@+id/get_all_cat" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/get_all_cat"
        android:layout_toRightOf="@+id/get_all_cat" />

    <Button
        android:id="@+id/updateCat_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_btn"
        android:layout_centerHorizontal="true"
        android:text="updateCat" />

    <Button
        android:id="@+id/upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setting_btn"
        android:layout_centerHorizontal="true"
        android:text="Upload  a file" />

</RelativeLayout>
