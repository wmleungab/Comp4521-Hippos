<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hkust.comp4521.hippos.InventoryDetailsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:id="@+id/iv_inventory"
        android:src="@mipmap/placeholder"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/ib_actionBar_back"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/left_arrow" />

    <ImageButton
        android:id="@+id/ib_actionBar_pencil"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/pencil" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/iv_inventory"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="56dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/tag"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Item Name"
                android:id="@+id/tv_inventory_item_name"
                android:textColor="@color/text_primary"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="56dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/information"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Item Description"
                android:id="@+id/tv_inventory_item_desc"
                android:textColor="@color/text_primary"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="56dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/price"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Item Price"
                android:id="@+id/tv_inventory_item_price"
                android:textColor="@color/text_primary"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="56dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/stock"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Item Stock"
                android:layout_weight="150"
                android:id="@+id/tv_inventory_item_stock"
                android:textColor="@color/text_primary"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

            <ImageButton
                android:id="@+id/ib_inventory_add_stock"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/plus_dark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="28dp">
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="left"
            android:id="@+id/ll_inventory_details_nfc_assign"
            android:layout_width="fill_parent"
            android:layout_height="56dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/nfc_chip"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Assign information to NFC tag"
                android:textColor="@color/blue_primary_highlighted"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="56dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/delete"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical|start"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Delete inventory"
                android:textColor="@color/red_primary_dark"
                android:layout_gravity="center_vertical|start"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
