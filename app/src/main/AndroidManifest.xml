<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hkust.comp4521.hippos">

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".DebugActivity"
            android:label="@string/title_activity_debug">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewInvoiceActivity"
            android:label="@string/title_activity_new_invoice" />
        <activity
            android:name=".InventoryListActivity"
            android:label="@string/title_activity_inventory_list" />
        <activity
            android:name=".InventoryDetailsActivity"
            android:label="@string/title_activity_inventory_details" />
        <activity
            android:name=".SalesHistoryActivity"
            android:label="@string/title_activity_sales_history" />
        <activity
            android:name=".SalesDetailsActivity"
            android:label="@string/title_activity_sales_details" />
        <activity
            android:name=".CategoryTestActivity"
            android:label="@string/title_activity_setting" />
        <activity
            android:name=".InventoryTestActivity"
            android:label="@string/title_activity_inventory_test" />
        <activity
            android:name=".InvoiceTestActivity"
            android:label="@string/title_activity_invoice_test" />
        <activity
            android:name=".MainActivity2Activity"
            android:label="@string/title_activity_main_activity2"></activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"></activity>
    </application>

</manifest>
